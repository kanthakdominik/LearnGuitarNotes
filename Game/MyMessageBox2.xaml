<Window x:Class="Game.MyMessageBox2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="Close" Height="200" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False"  WindowStyle="None" Topmost="True" >
    <Window.Background>
        <ImageBrush ImageSource="Images\MyMessageBox.jpg"/>
    </Window.Background>
    <Grid>
        <TextBlock Name="myTextBlock" Margin="0,32,0,102" Text="{Binding Path=Text_to_display}" TextAlignment="Center" FontSize="25" FontWeight="Bold"/>
        <Button Margin="190,118,190,42" Height="40" Width="120" Background="#FFB69711" Click="Button_Click_OK">
            <TextBlock Text="Ok" FontSize="15" FontWeight="Bold"/>
        </Button>
    </Grid>
</Window>
