                    <ControlTemplate>
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Image Source="Images/exit.png"  Width="70" Height="70"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
